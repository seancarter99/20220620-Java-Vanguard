		}
	}
	
	private static ChinookDbConnection connection = new ChinookDbConnection();
	
	private ChinookDbConnection() {
		try (InputStream input = ChinookDbConnection.class.getClassLoader()
				.getResourceAsStream("application.properties")) {
			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public static ChinookDbConnection getInstance() {
		return connection;
	}
	
	
